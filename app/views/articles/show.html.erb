<!-- Display title and text of the article -->
<h2><%= @article.title %></h2>
<p><%= @article.text %></p>
<!-- Adding comments for specific article -->
<p>
  <h2>
    Add comment:
  </h2>
  <%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
      <%= f.label :author %> <br />
      <%= f.text_field :author %>
    </p>

    <p>
      <%= f.label :body %>  <br />
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.submit %>
      <%= link_to 'Back', articles_path(@articles) %>
    </p>
  <% end %>  
    <hr />
</p>
<!-- Block display comments for specific article -->
<h2>
  Comments:
</h2>
<p>
  <% @article.comments.each do |f| %>
    <p>
      <%= f.author %>:
      <%= f.body %>
    </p>
  <% end %>
</p>